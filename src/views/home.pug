doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Zoom Clone Coding
            #myStream
                video#myFace(autoplay,playsinline,width="400",height="250")
                button#mute Mute
                button#camera CameraOff
        main 
            #welcome
                form
                    input#roomName(type="text",placeholder="room name",required)
                    input#nickName(type="text",placeholder="nickname",required)
                    button Enter room
                h4 Open rooms
                ul#rooms
            #room
                h3
                ul 
                form#msg
                    input(type="text",placeholder="message",required)
                    button Send message
                

        script(src="/socket.io/socket.io.js")    
        script(src="/public/js/app.js")